<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#416297"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Add_Question">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:entries="@array/types"
            android:background="#fff"
            android:padding="7dp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/difficulity"
            android:layout_width="match_parent"
            android:entries="@array/dificulity"
            android:background="#fff"
            android:padding="7dp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:hint="content"
            android:background="#fff"
            android:layout_margin="20dp"
            android:padding="7dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/validanswer"
            android:layout_width="match_parent"
            android:hint="valid answer"
            android:background="#fff"
            android:layout_margin="20dp"
            android:padding="7dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/wrong_answer1"
            android:layout_width="match_parent"
            android:hint="wrong answer1"
            android:background="#fff"
            android:layout_margin="20dp"
            android:padding="7dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/wrong_answer2"
            android:layout_width="match_parent"
            android:hint="wrong answer2"
            android:background="#fff"
            android:layout_margin="20dp"
            android:padding="7dp"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/wrong_answer3"
            android:layout_width="match_parent"
            android:hint="wrong answer3"
            android:background="#fff"
            android:layout_margin="20dp"
            android:padding="7dp"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="Update Question"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/edit_add" />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:text="Update Question"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:background="@drawable/edit_add" />

    </LinearLayout>
</ScrollView>